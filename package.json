{
  "name": "task-manager",
  "description": "Task Manager API",
  "version": "0.1.0",
  "license": "MIT",
  "private": false,
  "main": "src/shared/infra/http/server.ts",
  "engines": {
    "node": ">=16.18.0"
  },
  "scripts": {
    "dev": "run-p dev:server",
    "dev:server": "ts-node-dev --inspect --transpile-only --exit-child --ignore-watch node_modules -r tsconfig-paths/register src/shared/infra/http/index.ts -e development",
    "start": "run-p start:server",
    "start:server": "node src/shared/infra/http/index.js -e production",
    "prisma:generate": "prisma generate",
    "prisma:dev": "prisma migrate dev",
    "prisma:prod": "prisma migrate deploy",
    "test": "jest",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix && tsc --noEmit",
    "i18n": "i18next-scanner --config ./src/shared/i18n/extraction.js --output ./src/shared/i18n/extraction 'src/**/*.{ts,tsx,js,jsx}'",
    "changelog": "standard-version --skip.bump --skip.commit --skip.tag",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "@sentry/node": "^7.19.0",
    "@sentry/tracing": "^7.19.0",
    "apollo-server-core": "^3.11.1",
    "apollo-server-express": "^3.11.1",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-useragent": "^1.0.15",
    "geoip-lite": "^1.4.6",
    "graphql": "^15.3.0",
    "graphql-query-complexity": "^0.12.0",
    "graphql-type-json": "^0.3.2",
    "helmet": "^6.0.0",
    "i18next": "^22.0.5",
    "i18next-fs-backend": "^2.0.0",
    "i18next-http-middleware": "^3.2.1",
    "ioredis": "^5.2.4",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.3",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.5.0",
    "prisma": "^4.6.1",
    "prisma-dbml-generator": "^0.9.1",
    "rate-limiter-flexible": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "semver": "^7.3.8",
    "tsyringe": "^4.7.0",
    "type-graphql": "^1.1.1",
    "uuid": "^9.0.0",
    "yargs": "^17.6.2",
    "youch": "^3.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/node": "^7.20.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.20.2",
    "@babel/plugin-transform-typescript": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/config-conventional": "^17.2.0",
    "@faker-js/faker": "^7.6.0",
    "@jest/globals": "^29.3.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-useragent": "^1.0.2",
    "@types/geoip-lite": "^1.4.1",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@types/semver": "^7.3.13",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commitizen": "^4.2.5",
    "commitlint": "^17.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "i18next-scanner": "^4.1.0",
    "jest": "^29.3.1",
    "jest-html-reporter": "^3.7.0",
    "jest-html-reporters": "^3.0.11",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
